

{% block body %}

<h1 id="text-head">Rechercher un user </h1>
<form class="navbar-form navbar-right" method="post" action="{{ path ('user_rechercher')}}">
            <input type="text" class="form-control" placeholder="Search..." name="motcle">
            <input type="submit">
          </form>


{user in users %}
<article>
<header>
<h4 id="text-head" style="color:green;"><a href="{{path("voyage_voir",{id: user.id}) }}" titre="Voir {{ user.Ville }}">{{ user.Ville }}</a></h4>
</header>
<div>
<p id="text-head">{{ user.Destination }}</p>
<p id="text-head">{{ user.MoisDepart }}</p>
<p id="text-head">{{ user.Nbrjours }}</p>
<p id="text-head">{{ user.TypeVoyage }}</p>
<p id="text-head">{{ user.Transport }}</p>
<p id="text-head">{{ user.budget }}</p>
</div>
</article>
{% endfor%}
{% endblock %}